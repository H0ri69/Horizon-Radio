{
    "manifest_version": 3,
    "name": "AI Radio for Youtube Music",
    "version": "1.0.0",
    "description": "AI generated Host and DJ voice-overs for YouTube Music",
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://music.youtube.com/*",
        "https://generativelanguage.googleapis.com/*",
        "https://suggestqueries.google.com/*",
        "*://*.ytimg.com/*",
        "*://*.googleusercontent.com/*",
        "*://*.ggpht.com/*",
        "http://localhost/*",
        "https://localhost/*",
        "ws://localhost/*",
        "http://127.0.0.1/*",
        "ws://127.0.0.1/*",
        "wss://horizon-api.matejpesl.cz/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "src/assets/sweepers/*/*.mp3"
            ],
            "matches": [
                "https://music.youtube.com/*"
            ]
        }
    ],
    "background": {
        "scripts": [
            "src/background.ts"
        ],
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://music.youtube.com/*"
            ],
            "js": [
                "src/content.tsx"
            ],
            "run_at": "document_idle"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "{b310998f-712a-4173-9158-ecd97539f6a6}",
            "strict_min_version": "140.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}
{
  "name": "horizon-radio",
  "private": true,
  "version": "1.0.2",
  "type": "module",
  "scripts": {
    "start": "concurrently \"pnpm start:relay\" \"pnpm start:app\" \"pnpm start:extension\"",
    "start:relay": "cd relay-server && pnpm start",
    "start:app": "cd remote-client && pnpm dev",
    "start:extension": "vite",
    "dev": "vite",
    "dev:firefox": "cross-env TARGET_BROWSER=firefox vite build --watch --mode production",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:firefox\"",
    "build:chrome": "vite build",
    "build:firefox": "cross-env TARGET_BROWSER=firefox vite build",
    "build": "pnpm build:chrome && pnpm build:firefox",
    "preview": "vite preview",
    "typecheck:watch": "tsc -p tsconfig.json --noEmit --watch"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "@sglara/cn": "^1.0.0",
    "colorjs.io": "^0.6.0",
    "framer-motion": "^12.24.10",
    "lucide-react": "^0.562.0",
    "node-vibrant": "^4.0.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-qr-code": "^2.0.18",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.3.0",
    "@types/chrome": "^0.1.32",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/webextension-polyfill": "^0.12.4",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}